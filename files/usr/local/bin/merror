#!/usr/bin/env bash

function printLog() {
    local doMessage="yes"

    case ${LOG_LEVEL} in
        DEBUG)
            doMessage="yes"
            ;;
        INFO)
            doMessage="yes"
            ;;
        WARNING)
            doMessage="yes"
            ;;
        ERROR)
            doMessage="yes"
            ;;
        CRITICAL)
            doMessage="no"
            ;;
    esac

    ([ "${doMessage}" == "yes" ] && echo "$@" >&2 ) || true
}

printLog "$@"
