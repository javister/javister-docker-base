#!/usr/bin/env python

import sys, os.path

if (len(sys.argv) == 1):
    print "Replace environment variables in the file and print it in the console."
    print "Usage:"
    print "expandenv /path/to/file"
    exit(1)

with open (sys.argv[1], "r") as myfile:
    data=myfile.readlines()

for x in data:
    sys.stdout.write(os.path.expandvars(x))
