#!/usr/bin/env bash

set -e

function printLog() {
    local doMessage="yes"

    case ${LOG_LEVEL} in
        DEBUG)
            doMessage="yes"
            ;;
        INFO)
            doMessage="no"
            ;;
        WARNING)
            doMessage="no"
            ;;
        ERROR)
            doMessage="no"
            ;;
        CRITICAL)
            doMessage="no"
            ;;
    esac

    ([[ "${doMessage}" == "yes" ]] && echo "$@") || true
}

if [[ -f "/tmp/SYSLOG_STARTED" ]]; then
    PARENT_COMMAND="$(ps -o comm= $PPID)"
    logger --priority debug --tag "${PARENT_COMMAND}" "# $@"
else
    printLog "$@"
fi
